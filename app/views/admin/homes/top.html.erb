<div class="container">
  <table class="table table-dark">
    <br>
    <br>
      <p class="h2 text-center">
        予約の一覧
      </p>
    <br>
    <br>
    <br>
    <thead>
      <tr>
        <th scope="col">予約日時</th>
        <th scope="col">顧客名</th>
        <th scope="col">品物</th>
        <th scope="col">配送希望</th>
        <th scope="col">要望</th>
      </tr>
    </thead>
    <tbody>
      <% @requests.each do |request| %>
      <tr>
        <td><%= request.time %></td>
        <tb></tb>
        <tb><%= request.customer.last_name %><%= request.customer.first_name %></tb>
        <td><%= request.name %></td>
        <td><%= request.status %></td>
        <td><%= request.comment %></td>
        <td><%= link_to "詳細へ", _path(request), class: 'text-white' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
</div>