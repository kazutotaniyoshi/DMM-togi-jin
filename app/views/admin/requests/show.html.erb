<div class="container">
  <table class="table table-dark">
    <br>
    <br>
      <p class="h2 text-center">
        依頼の詳細
      </p>
    <br>
    <br>
    <br>
    <thead>
      <tr>
        <th scope="col">予約日時</th>
        <th scope="col">顧客名</th>
        <th scope="col">品物</th>
        <th scope="col">配送希望</th>
        <th scope="col">要望</th>
        <th scope="col">仕上げ</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @request.time %></td>
        <tb><%= @request.customer.last_name %><%= @request.customer.first_name %></tb>
        <td><%= @request.name %></td>
        <td><%= @request.status %></td>
        <td><%= @request.comment %></td>
        <td><%= @request.making_status %></td>
      </tr>
    </tbody>
  </table>
  <div class="text-center h2 text-white">
    <td>お知らせ</td>
    <td><%= @inform.inform %></td>
    <br>
    <br>
    <br>
  <div class="text-center h2 text-white">
    <%= form_with model: @inform do |f| %>
    <%= f.select :maiking_satatus, [["0~30分", "0~30分"], ["30~60分", "30~60分"], ["60~90分", "60~90分"], ["90分以上", "90分以上"]], include_blank: "選択して下さい" %>
    <% end %>
    <%= f.submit '送信'%>
    <%= form_with(model:[@request, @inform]) do |f| %>
      <%= f.text_area :inform, rows:'5',placeholder: "お知らせを入力" %>
      <%= f.submit "完了" %>
    <% end %>
  </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
</div>