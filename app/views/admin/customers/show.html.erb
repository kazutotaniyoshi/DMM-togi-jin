<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my-5"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
        <div class="row">
          <div class="offset-2 col-2 mb-3">会員ID</div>
          <div class="col-8"><%= @customer.id %></div>

          <div class="offset-2 col-2 mb-3">氏名</div>
          <div class="col-8"><%= @customer.last_name %><%= @customer.first_name %></div>

          <div class="offset-2 col-2 mb-3">フリガナ</div>
          <div class="col-8"><%= @customer.last_name_kana %><%= @customer.first_name_kana %></div>

          <div class="offset-2 col-2 mb-3">郵便番号</div>
          <div class="col-8"><%= @customer.postcode %></div>

          <div class="offset-2 col-2 mb-3">住所</div>
          <div class="col-8"><%= @customer.address %></div>

          <div class="offset-2 col-2 mb-3">電話番号</div>
          <div class="col-8"><%= @customer.tel %></div>

          <div class="offset-2 col-2 mb-3">メールアドレス</div>
          <div class="col-8"><%= @customer.email %></div>

          <div class="offset-2 col-2 mb-3">会員ステータス</div>
          <div class="col-8">
            <% if @customer.is_valid %>
              <span class="text-denger">退会</span>
            <% else %>
              <span class="text-success">有効</span>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
