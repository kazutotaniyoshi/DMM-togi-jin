<div class="container">
  <div class="row">
    <div class="col-6 mt-3">
      <h4>マイページ</h4>
      <p class="mt-4">登録情報　　<%= link_to "編集する", edit_public_customer_path, class: "btn btn-success" %></p>
      <table class="table table-bordered">
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana%><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.tel %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
</div>


